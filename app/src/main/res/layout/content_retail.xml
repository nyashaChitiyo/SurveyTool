<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gifty.surveytool.Retail"
    tools:showIn="@layout/app_bar_retail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/clocking"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="STAFF CLOCKING" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/clocking"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Location:" />

        <Spinner
            android:id="@+id/locations"
            android:layout_width="match_parent"
            android:layout_below="@+id/clocking"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/location_name"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Project name:" />

        <EditText
            android:id="@+id/projectname"
            android:layout_below="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/outletname"
            android:layout_width="wrap_content"
            android:layout_below="@+id/projectname"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Outlet:" />

        <Spinner
            android:id="@+id/outlet"
            android:layout_below="@+id/projectname"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/management"
            android:layout_width="wrap_content"
            android:layout_below="@+id/outletname"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:text="Management:" />

        <Spinner
            android:id="@+id/branchmanagement"
            android:layout_below="@+id/outletname"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fullnametext"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/management"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:text="Full name:" />

        <EditText
            android:id="@+id/fullname"
            android:layout_below="@+id/fullnametext"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/phonetext"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fullname"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:text="Phone number:" />

        <EditText
            android:id="@+id/phonenumber"
            android:layout_below="@+id/phonetext"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/phonenumber"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <EditText
            android:id="@+id/emailentry"
            android:layout_below="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/clienttext"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/emailentry"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Client:" />

        <EditText
            android:id="@+id/client"
            android:layout_below="@+id/clienttext"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/baname"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/client"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="BA fullname:" />

        <EditText
            android:id="@+id/ba"
            android:layout_below="@+id/baname"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/rstocks"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ba"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="STOCKS" />

        <TextView
            android:id="@+id/rwstocks"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rstocks"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="Opening stock (warehouse floor)" />




        <TextView
            android:id="@+id/wbrandname"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rwstocks"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Brand:" />

        <EditText
            android:id="@+id/wbrand"
            android:layout_below="@+id/wbrandname"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/wpacksize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wbrand"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Pack size:" />

        <EditText
            android:id="@+id/wpacksize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wpacksize1"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/wquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wbrand"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/wpacksize1"
            android:text="Quantity:" />

        <EditText
            android:id="@+id/wquantitycounted"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wquantity"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/wpacksize1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/wbreakages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wpacksize"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Breakages:" />

        <EditText
            android:id="@+id/wbreakages_brand"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wbreakages"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/wbreakages_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wpacksize"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/breakages"
            android:text="Qty of breakages:" />

        <EditText
            android:id="@+id/wquantity_breakages"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wbreakages_text"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/wbreakages"
            android:ems="10"
            android:inputType="numberDecimal" />



        <TextView
            android:id="@+id/openingstock"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wquantity_breakages"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Opening Stock (shop floor)" />

        <TextView
            android:id="@+id/brandname"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/openingstock"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Brand:" />

        <EditText
            android:id="@+id/brand"
            android:layout_below="@+id/brandname"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/packsize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Pack size:" />

        <EditText
            android:id="@+id/packsize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/packsize1"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/packsize1"
            android:text="Quantity:" />

        <EditText
            android:id="@+id/quantitycounted"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/packsize1"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/breakages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/packsize"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Breakages:" />

        <EditText
            android:id="@+id/breakages_brand"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakages"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/breakages_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/packsize"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/breakages"
            android:text="Qty of breakages:" />

        <EditText
            android:id="@+id/quantity_breakages"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakages_text"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/breakages"
            android:ems="10"
            android:inputType="numberDecimal" />



        <TextView
            android:id="@+id/closingstock"
            android:layout_width="match_parent"
            android:layout_below="@+id/quantity_breakages"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Closing Stock (shop floor)" />

        <TextView
            android:id="@+id/cbrandname"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/closingstock"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Brand:" />

        <EditText
            android:id="@+id/cbrand"
            android:layout_below="@+id/cbrandname"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/cpacksize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbrand"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Pack size:" />

        <EditText
            android:id="@+id/cpacksize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpacksize1"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/cquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbrand"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cpacksize1"
            android:text="Quantity:" />

        <EditText
            android:id="@+id/cquantitycounted"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cquantity"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@+id/cpacksize1"
            android:ems="10"
            android:inputType="numberDecimal" />


        <TextView
            android:id="@+id/runningrates"
            android:layout_width="match_parent"
            android:layout_below="@+id/cquantitycounted"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Daily Running Rates" />

        <TextView
            android:id="@+id/salestext"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/runningrates"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Calculated sales:" />

        <EditText
            android:id="@+id/sales"
            android:layout_below="@+id/salestext"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/warehousecs"
            android:layout_width="match_parent"
            android:layout_below="@+id/sales"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:text="Closing Stock (Warehouse floor)" />

        <TextView
            android:id="@+id/warehouse"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/warehousecs"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Warehouse closing stock:" />

        <EditText
            android:id="@+id/cswarehouse"
            android:layout_below="@+id/warehouse"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/ronshelf"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/cswarehouse"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="ON SHELF STATISTICS" />



        <TextView
            android:id="@+id/pictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ronshelf"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:text="Picture of Shelf" />

        <Button
            android:id="@+id/picbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pictext"
            android:background="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#322a29"
            android:text="Attach" />

        <ImageView
            android:id="@+id/shelfimage"
            android:layout_width="60dp"
            android:layout_below="@id/pictext"
            android:layout_toRightOf="@+id/picbtn"
            android:layout_marginLeft="90dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/percentages"
            android:layout_below="@+id/shelfimage"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Shelf share percentages:" />

        <EditText
            android:id="@+id/shelfpercentages"
            android:layout_below="@+id/percentages"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="%"/>

        <TextView
            android:id="@+id/planogram"
            android:layout_width="wrap_content"
            android:layout_below="@+id/shelfpercentages"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:text="Attach planogram" />

        <Button
            android:id="@+id/planogrambtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planogram"
            android:background="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#322a29"
            android:text="Attach" />

        <ImageView
            android:id="@+id/planogrampic"
            android:layout_width="60dp"
            android:layout_below="@id/planogram"
            android:layout_toRightOf="@+id/planogrambtn"
            android:layout_marginLeft="90dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/competitor"
            android:layout_below="@+id/planogrambtn"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor SKU selling price:" />

        <EditText
            android:id="@+id/competitorprice"
            android:layout_below="@+id/competitor"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/ownprice"
            android:layout_below="@+id/competitorprice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Own SKU selling price:" />

        <EditText
            android:id="@+id/ownskuprice"
            android:layout_below="@+id/ownprice"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/cposm"
            android:layout_below="@+id/ownskuprice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor POSM:" />

        <EditText
            android:id="@+id/competitorposm"
            android:layout_below="@+id/cposm"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/oposm"
            android:layout_below="@+id/competitorposm"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Own POSM:" />

        <EditText
            android:id="@+id/ownposm"
            android:layout_below="@+id/oposm"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/cspecials"
            android:layout_below="@+id/ownposm"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor Specials:" />

        <EditText
            android:id="@+id/competitorspecials"
            android:layout_below="@+id/cspecials"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/shopperstats"
            android:layout_width="wrap_content"
            android:layout_below="@+id/competitorspecials"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="SHOPPER STATISTICS" />

        <TextView
            android:id="@+id/estshoppers1"
            android:layout_width="wrap_content"
            android:layout_below="@+id/shopperstats"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Estimated shoppers:"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/estshoppers"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_below="@id/shopperstats"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/imgcounter"
            android:layout_width="wrap_content"
            android:layout_below="@+id/estshoppers1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="Image Counter" />

        <ImageView
            android:id="@+id/imagecounter"
            android:layout_below="@+id/imgcounter"
