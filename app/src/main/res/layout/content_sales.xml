<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gifty.surveytool.Sales"
    tools:showIn="@layout/app_bar_sales">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="KYC" />

        <TextView
            android:id="@+id/firstnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kyc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="First name:" />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/firstnametext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lastnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstname"
            android:layout_marginLeft="15dp"
            android:text="Last name:" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lastnametext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/dobtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastname"
            android:layout_marginLeft="15dp"
            android:text="D.O.B" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dobtext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_marginLeft="15dp"
            android:text="Gender" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="26dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/male"
            android:text="Female" />

        <TextView
            android:id="@+id/personalphone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/male"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Personal phone number:" />

        <EditText
            android:id="@+id/personalphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/personalphone1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/homephone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personalphone"
            android:layout_marginLeft="15dp"
            android:text="Home phone number:" />

        <EditText
            android:id="@+id/homephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/homephone1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/workphone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homephone"
            android:layout_marginLeft="15dp"
            android:text="Work phone number:" />

        <EditText
            android:id="@+id/workphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/workphone1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workphone"
            android:layout_marginLeft="15dp"
            android:text="Email:" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/emailtext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/workaddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="15dp"
            android:text="Work Address:" />

        <EditText
            android:id="@+id/workaddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/workaddress1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/idnumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workaddress"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="ID number:" />

        <EditText
            android:id="@+id/idnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/idnumber1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/picbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idnumber"
            android:background="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#322a29"
            android:text="Attach" />

        <ImageView
            android:id="@+id/shelfimage"
            android:layout_width="60dp"
            android:layout_below="@id/idnumber"
            android:layout_toRightOf="@+id/picbtn"
            android:layout_marginLeft="90dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/nextsalesbtn"
            android:layout_below="@+id/picbtn"
            android:background="#322a29"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT" />

    </RelativeLayout>
</ScrollView>
