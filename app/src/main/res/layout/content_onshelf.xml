<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gifty.surveytool.Onshelf"
    tools:showIn="@layout/app_bar_onshelf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:text="Picture of Shelf" />

        <Button
            android:id="@+id/picbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pictext"
            android:background="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#322a29"
            android:text="Attach" />

        <ImageView
            android:id="@+id/shelfimage"
            android:layout_width="60dp"
            android:layout_below="@id/pictext"
            android:layout_toRightOf="@+id/picbtn"
            android:layout_marginLeft="90dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/percentages"
            android:layout_below="@+id/shelfimage"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Shelf share percentages:" />

        <EditText
            android:id="@+id/shelfpercentages"
            android:layout_below="@+id/percentages"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="%"/>

        <TextView
            android:id="@+id/planogram"
            android:layout_width="wrap_content"
            android:layout_below="@+id/shelfpercentages"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:text="Attach planogram" />

        <Button
            android:id="@+id/planogrambtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planogram"
            android:background="#ff8c00"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#322a29"
            android:text="Attach" />

        <ImageView
            android:id="@+id/planogrampic"
            android:layout_width="60dp"
            android:layout_below="@id/planogram"
            android:layout_toRightOf="@+id/planogrambtn"
            android:layout_marginLeft="90dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/competitor"
            android:layout_below="@+id/planogrampic"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor SKU selling price:" />

        <EditText
            android:id="@+id/competitorprice"
            android:layout_below="@+id/competitor"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/ownprice"
            android:layout_below="@+id/competitorprice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Own SKU selling price:" />

        <EditText
            android:id="@+id/ownskuprice"
            android:layout_below="@+id/ownprice"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/cposm"
            android:layout_below="@+id/ownskuprice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor POSM:" />

        <EditText
            android:id="@+id/competitorposm"
            android:layout_below="@+id/cposm"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/oposm"
            android:layout_below="@+id/competitorposm"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Own POSM:" />

        <EditText
            android:id="@+id/ownposm"
            android:layout_below="@+id/oposm"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/cspecials"
            android:layout_below="@+id/ownposm"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="Competitor Specials:" />

        <EditText
            android:id="@+id/competitorspecials"
            android:layout_below="@+id/cspecials"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />

        <Button
            android:id="@+id/onshelfbtn"
            android:layout_below="@+id/competitorspecials"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#322a29"
            android:textColor="#ff8c00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:text="SAVE" />


    </RelativeLayout>
</ScrollView>
